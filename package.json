{
  "publisher": "fxzer",
  "name": "vscode-markdown-shiki-preview",
  "displayName": " VSCode Markdown Shiki Preview",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "description": "A VSCode extension for previewing Markdown files with enhanced theme switching, keyboard navigation, and real-time preview",
  "author": "fxzer <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/fxzer",
  "homepage": "https://github.com/fxzer/vscode-markdown-shiki-preview#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/fxzer/vscode-markdown-shiki-preview"
  },
  "bugs": {
    "url": "https://github.com/fxzer/vscode-markdown-shiki-preview/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/fxzer"
  },
  "keywords": [
    "markdown",
    "preview",
    "theme",
    "styling"
  ],
  "categories": [
    "Other",
    "Themes"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/**/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "markdownPreview.showPreview",
        "title": "Open Markdown Preview",
        "category": "VSCode Markdown Shiki Preview",
        "icon": {
          "light": "res/preview.svg",
          "dark": "res/preview.svg"
        }
      },
      {
        "command": "markdownPreview.switchTheme",
        "title": "Switch Theme",
        "category": "VSCode Markdown Shiki Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdownPreview.showPreview",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "markdownPreview.showPreview",
          "when": "resourceExtname == .md"
        },
        {
          "command": "markdownPreview.switchTheme"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "VSCode Markdown Shiki Preview",
      "properties": {
        "markdownPreview.currentTheme": {
          "type": "string",
          "default": "vitesse-dark",
          "description": "Current theme for the markdown preview.",
          "enum": [
            "andromeeda",
            "aurora-x",
            "ayu-dark",
            "catppuccin-frappe",
            "catppuccin-latte",
            "catppuccin-macchiato",
            "catppuccin-mocha",
            "dark-plus",
            "dracula",
            "dracula-soft",
            "everforest-dark",
            "everforest-light",
            "github-dark",
            "github-dark-default",
            "github-dark-dimmed",
            "github-dark-high-contrast",
            "github-light",
            "github-light-default",
            "github-light-high-contrast",
            "gruvbox-dark-hard",
            "gruvbox-dark-medium",
            "gruvbox-dark-soft",
            "gruvbox-light-hard",
            "gruvbox-light-medium",
            "gruvbox-light-soft",
            "houston",
            "kanagawa-dragon",
            "kanagawa-lotus",
            "kanagawa-wave",
            "laserwave",
            "light-plus",
            "material-theme",
            "material-theme-darker",
            "material-theme-lighter",
            "material-theme-ocean",
            "material-theme-palenight",
            "min-dark",
            "min-light",
            "monokai",
            "night-owl",
            "nord",
            "one-dark-pro",
            "one-light",
            "plastic",
            "poimandres",
            "red",
            "rose-pine",
            "rose-pine-dawn",
            "rose-pine-moon",
            "slack-dark",
            "slack-ochin",
            "snazzy-light",
            "solarized-dark",
            "solarized-light",
            "synthwave-84",
            "tokyo-night",
            "vesper",
            "vitesse-black",
            "vitesse-dark",
            "vitesse-light"
          ]
        },
        "markdownPreview.fontSize": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 32,
          "description": "Font size for preview content"
        },
        "markdownPreview.lineHeight": {
          "type": "number",
          "default": 1.6,
          "minimum": 1,
          "maximum": 3,
          "description": "Line height for preview content"
        },
        "markdownPreview.syncScroll": {
          "type": "boolean",
          "default": true,
          "description": "Enable synchronous scrolling between editor and preview. Enable 'editor.smoothScrolling' for smoother scrolling experience"
        },
        "markdownPreview.fontFamily": {
          "type": "string",
          "default": "system-ui",
          "description": "Font family for preview content. Selected font must be installed on your system. For other fonts, modify settings.json directly.",
          "enum": [
            "system-ui",
            "Helvetica",
            "Arial",
            "serif",
            "Georgia",
            "Verdana",
            "Tahoma",
            "Menlo",
            "Cascadia Code",
            "Monaco",
            "Courier",
            "Consolas",
            "Courier New",
            "Input Mono",
            "Source Code Pro",
            "Microsoft YaHei",
            "Fira Code",
            "JetBrains Mono"
          ]
        },
        "markdownPreview.documentWidth": {
          "type": "string",
          "default": "1000px",
          "description": "Controls the container width for preview content. Accepts CSS width values like '800px', '50%', '100vw', etc."
        },
        "markdownPreview.enableMermaid": {
          "type": "boolean",
          "default": true,
          "description": "Enable Mermaid diagram preview. Disabling this can improve performance for documents with many diagrams."
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "lintfix": "eslint . --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "nr build",
    "release": "bumpp",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsxpub --no-dependencies"
  },
  "dependencies": {
    "@shikijs/markdown-it": "^3.12.2",
    "@types/chroma-js": "^3.1.1",
    "chroma-js": "^3.1.2",
    "gray-matter": "^4.0.3",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.11.0",
    "shiki": "^3.12.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.2",
    "@antfu/ni": "^25.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.103.0",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^10.2.3",
    "eslint": "^9.34.0",
    "esno": "^4.8.0",
    "handlebars": "^4.7.8",
    "ovsx": "^0.10.5",
    "pnpm": "^10.15.1",
    "reactive-vscode": "^0.3.2",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.1.0",
    "vsxpub": "^0.1.1"
  }
}
